<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <listener-class>ro.springsoft.poc.utils.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>AddMessageServlet</servlet-name>
        <servlet-class>ro.springsoft.poc.servlets.AddMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddManyMessagesServlet</servlet-name>
        <servlet-class>ro.springsoft.poc.servlets.AddManyMessagesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListDBSerlet</servlet-name>
        <servlet-class>ro.springsoft.poc.servlets.ListDBSerlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMessageServlet</servlet-name>
        <url-pattern>/addmessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddManyMessagesServlet</servlet-name>
        <url-pattern>/addmanymessages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListDBSerlet</servlet-name>
        <url-pattern>/listdb</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
