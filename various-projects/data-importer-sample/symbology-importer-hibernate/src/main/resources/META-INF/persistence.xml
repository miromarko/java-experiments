<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="SymbologyPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.gmanalytics.symbology.persistence.entities.ApEquitie</class>
        <class>com.gmanalytics.symbology.persistence.entities.ApFuture</class>
        <class>com.gmanalytics.symbology.persistence.entities.CadEquitie</class>
        <class>com.gmanalytics.symbology.persistence.entities.Current</class>
        <class>com.gmanalytics.symbology.persistence.entities.EuEquitie</class>
        <class>com.gmanalytics.symbology.persistence.entities.EuFuture</class>
        <class>com.gmanalytics.symbology.persistence.entities.Fx</class>
        <class>com.gmanalytics.symbology.persistence.entities.Symbol</class>
        <class>com.gmanalytics.symbology.persistence.entities.UsEquitie</class>
        <class>com.gmanalytics.symbology.persistence.entities.UsFuture</class>
        <class>com.gmanalytics.symbology.persistence.entities.UsFutureOption</class>
        <class>com.gmanalytics.symbology.persistence.entities.UsIndex</class>
        <class>com.gmanalytics.symbology.persistence.entities.UsOption</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/symbology"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.password" value="miro"/>
            <property name="javax.persistence.jdbc.user" value="miro"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.transaction.factory_class" value="org.hibernate.transaction.JDBCTransactionFactory"/>
            <property name="hibernate.current_session_context_class" value="thread"/>
            <!--<property name="hibernate.show_sql"  value="true"/>-->
            <!--c3p0 config http://www.hibernate.org/214.html-->
            <property name="connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider"/>
            <property name="hibernate.c3p0.acquire_increment" value="4"/>
            <property name="hibernate.c3p0.idle_test_period" value="3000"/>            
            <property name="hibernate.c3p0.max_statements" value="100"/>
            <property name="hibernate.c3p0.min_size" value="12"/>
            <property name="hibernate.c3p0.max_size" value="100"/>
            <property name="hibernate.c3p0.timeout" value="100"/><!--seconds-->
        </properties>
    </persistence-unit>
</persistence>
